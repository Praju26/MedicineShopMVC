@model MedicineDetailViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Medicine.Id" />
            <div class="form-group">
                <label asp-for="Medicine.Medicine_Name" class="control-label"></label> @*The asp-for attribute is made available by the For property in the LabelTagHelper*@
                <input asp-for="Medicine.Medicine_Name" class="form-control" />
                <span asp-validation-for="Medicine.Medicine_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Medicine_Type" class="control-label"></label>
                <input asp-for="Medicine.Medicine_Type" class="form-control" />
                <span asp-validation-for="Medicine.Medicine_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Medicine_Quantity" class="control-label"></label>
                <input asp-for="Medicine.Medicine_Quantity" class="form-control" />
                <span asp-validation-for="Medicine.Medicine_Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Medicine_Price" class="control-label"></label>
                <input asp-for="Medicine.Medicine_Price" class="form-control" />
                <span asp-validation-for="Medicine.Medicine_Price" class="text-danger"></span>
            </div>

            <h4>MedicineDetailInfo</h4>
            <hr />

            <input type="hidden" asp-for="MedicineDetailInfo.Id" />
            <div class="form-group">
                <label asp-for="MedicineDetailInfo.Medicine_Cost_Price" class="control-label"></label>
                <input asp-for="MedicineDetailInfo.Medicine_Cost_Price" class="form-control" />
                <span asp-validation-for="MedicineDetailInfo.Medicine_Cost_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineDetailInfo.MedicineCode_Code" class="control-label"></label>
                <input asp-for="MedicineDetailInfo.MedicineCode_Code" class="form-control" />
                <span asp-validation-for="MedicineDetailInfo.MedicineCode_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
